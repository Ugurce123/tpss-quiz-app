# Production Environment Variables
NODE_ENV=production
PORT=5001

# MongoDB Atlas Connection (Atlas'tan alacağınız connection string)
MONGODB_URI=mongodb+srv://baggage-admin:YOUR_PASSWORD@baggage-quiz-cluster.xxxxx.mongodb.net/baggage-quiz?retryWrites=true&w=majority

# JWT Secret (güçlü bir secret key)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# CORS Origin (Vercel domain'iniz)
CORS_ORIGIN=https://your-app-name.vercel.app

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Security
BCRYPT_ROUNDS=12
SESSION_SECRET=your-session-secret-key